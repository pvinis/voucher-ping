{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["bun-types"],

		// to use react email templates
		"jsx": "react-jsx",
		"jsxImportSource": "react"
	},
	"include": ["src/**/*"]
}
